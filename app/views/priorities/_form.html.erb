
    <%= simple_form_for @priority, :html => { :class => 'form-horizontal' } do |f| %>
     <div class="row">
	    <div class="small-12 columns">
	      <%= f.input :content, :label => false, :placeholder => "Add Priority" %>
	      
	    </div>
	    <div class="small-6 columns">
		  <%= f.input_field :high, :inline_label => " Due Today" %>
		</div>
		<div class="small-6 columns">
		  <%= f.button :submit, 'Add Priority', :class => 'button tiny radius round right' %>
		</div>
	  </div>
	<% end %>

	